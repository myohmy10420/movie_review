<div class="form form-devise">
  <h2 style="margin-top: 0;"><%= t("devise.sessions.new.sign_in") %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group" style="width: 300px;">
      <%= f.label t("activerecord.attributes.user.email") %>
      <%= f.email_field :email, autofocus: true, class: "form-control", required: true %>
    </div>

    <div class="form-group" style="width: 300px;">
      <%= f.label t("activerecord.attributes.user.password") %>
      <%= f.password_field :password, class: "form-control", required: true %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label t("activerecord.attributes.user.remember_me") %>
      </div>
    <% end -%>

    <div class="form-group" style="width: 300px;">
      <%= f.submit t("devise.sessions.new.sign_in"), class: "btn btn-lg btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
